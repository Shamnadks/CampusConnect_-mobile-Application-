<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.merin.universityapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/book"
        android:label="LERNEN"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login" />
        <activity android:name=".registration" />
        <activity android:name=".view_profile" />
        <activity android:name=".send_doubt" />
        <activity android:name=".view_subject" />
        <activity android:name=".send_rating" />
        <activity android:name=".send_suggestion" />
        <activity android:name=".view_videos" />
        <activity android:name=".view_notes" />
        <activity android:name=".view_pqs" />

        <uses-library android:name="org.apache.http.legacy" />

        <activity android:name=".view_dbt_status" />
        <activity
            android:name=".userhome"
            android:label="@string/title_activity_userhome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".custom_view_notes" />
        <activity android:name=".custom_view_subject" />
        <activity android:name=".custom_view_previous_question" />
        <activity android:name=".custom_view_videos" />
        <activity android:name=".custom_view_doubts" />
        <activity android:name=".focus_area" />
        <activity android:name=".custom_focus_area"></activity>
    </application>

</manifest>